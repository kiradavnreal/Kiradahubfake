-- Kirada Beta (Demo) - Roblox Client Hack Script
-- Features: Infinite Run (with speed input), Jump Hack, Noclip Toggle, Rainbow ESP with Distance
-- Notification: One-time error message on load
-- GUI: Modern UI with blur and gradients
-- Author: Grok (demo version) - Use at your own risk!

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")

-- Variables
local infiniteRunEnabled = false
local jumpEnabled = false
local noclipEnabled = false
local espEnabled = false
local runSpeed = 16 -- Default speed
local noclipConnection
local runConnection
local espConnections = {}

-- One-time Notification
local function showNotification(text)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")
    screenGui.Name = "KiradaNotification"
    screenGui.ResetOnSpawn = false

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 300, 0, 60)
    frame.Position = UDim2.new(0.5, -150, 0, 20)
    frame.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = frame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextScaled = true
    label.Font = Enum.Font.GothamBold
    label.Parent = frame

    -- Animate in
    frame.Size = UDim2.new(0, 0, 0, 0)
    TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Back), {Size = UDim2.new(0, 300, 0, 60)}):Play()
    
    -- Fade out after 3s
    wait(3)
    TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
    TweenService:Create(label, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    wait(0.5)
    screenGui:Destroy()
end

-- Show notification once on load
showNotification("L·ªói l√¢u l√¢u xin th√¥ng c·∫£m ü•∫")

-- Rainbow Color Function
local function getRainbowColor()
    local time = tick() * 0.5
    local r = math.sin(time) * 0.5 + 0.5
    local g = math.sin(time + 2) * 0.5 + 0.5
    local b = math.sin(time + 4) * 0.5 + 0.5
    return Color3.new(r, g, b)
end

-- ESP Function
local function createESP(targetPlayer)
    if targetPlayer == player or not targetPlayer.Character then return end
    local character = targetPlayer.Character
    local root = character:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local highlight = Instance.new("Highlight")
    highlight.Adornee = character
    highlight.FillTransparency = 0.5
    highlight.OutlineColor = Color3.new(1, 1, 1)
    highlight.OutlineTransparency = 0
    highlight.Parent = character
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop

    local billboard = Instance.new("BillboardGui")
    billboard.Name = "ESPBillboard"
    billboard.Adornee = root
    billboard.Size = UDim2.new(0, 100, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = character

    local distanceLabel = Instance.new("TextLabel")
    distanceLabel.Size = UDim2.new(1, 0, 1, 0)
    distanceLabel.BackgroundTransparency = 1
    distanceLabel.TextColor3 = Color3.new(1, 1, 1)
    distanceLabel.TextScaled = true
    distanceLabel.Font = Enum.Font.GothamBold
    distanceLabel.Parent = billboard

    local connection
    connection = RunService.RenderStepped:Connect(function()
        if not espEnabled or not targetPlayer.Character or not character.Parent or not root.Parent then
            highlight:Destroy()
            billboard:Destroy()
            connection:Disconnect()
            return
        end
        highlight.FillColor = getRainbowColor()
        local distance = (rootPart.Position - root.Position).Magnitude / 3 -- Studs to meters
        distanceLabel.Text = string.format("%.1f m", distance)
    end)

    table.insert(espConnections, connection)
end

local function toggleESP()
    espEnabled = not espEnabled
    for _, connection in ipairs(espConnections) do
        connection:Disconnect()
    end
    espConnections = {}
    
    if espEnabled then
        for _, targetPlayer in ipairs(Players:GetPlayers()) do
            createESP(targetPlayer)
        end
        Players.PlayerAdded:Connect(createESP)
    end
end

-- Noclip Function
local function toggleNoclip()
    noclipEnabled = not noclipEnabled
    if noclipConnection then noclipConnection:Disconnect() end
    
    if noclipEnabled then
        noclipConnection = RunService.Stepped:Connect(function()
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") and part.CanCollide then
                    part.CanCollide = false
                end
            end
        end)
    end
end

-- Infinite Run Function
local function toggleInfiniteRun()
    infiniteRunEnabled = not infiniteRunEnabled
    if runConnection then runConnection:Disconnect() end
    
    if infiniteRunEnabled then
        runConnection = RunService.Heartbeat:Connect(function()
            if humanoid.MoveDirection.Magnitude > 0 then
                rootPart.Velocity = humanoid.MoveDirection * runSpeed
            end
        end)
    end
end

-- Jump Hack
local function toggleJump()
    jumpEnabled = not jumpEnabled
    humanoid.JumpPower = jumpEnabled and 100 or 50
end

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KiradaBeta"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

