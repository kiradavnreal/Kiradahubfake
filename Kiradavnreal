    espButton.Text = espEnabled and lang[vietnameseEnabled and "vi" or "en"].espButtonOn or lang[vietnameseEnabled and "vi" or "en"].espButton
    espButton.BackgroundColor3 = espEnabled and Color3.fromRGB(76, 175, 80) or Color3.fromRGB(46, 125, 50)
end)

-- Translate Button
