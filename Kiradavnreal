-- Kirada Hub Beta (Demo) - Roblox Client Hack Script
-- Features: Infinite Run (with speed input), Jump Hack (with height input), Noclip Toggle, Rainbow ESP with Distance, Vietnamese Translation Toggle
-- Notification: One-time error message on load
-- GUI: Modern UI with blur and gradients
-- Author: Grok (demo version) - Use at your own risk!

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")

-- Variables
local infiniteRunEnabled = false
local jumpEnabled = false
local noclipEnabled = false
local espEnabled = false
local vietnameseEnabled = false
local runSpeed = 16 -- Default speed
local jumpPower = 50 -- Default jump power
local noclipConnection
local runConnection
local espConnections = {}

-- Language Dictionaries
local lang = {
    en = {
        title = "Kirada Hub Beta (Demo)",
        speedLabel = "Run Speed:",
        speedPlaceholder = "Enter speed (e.g., 50)",
        runButton = "Infinite Run: OFF",
        runButtonOn = "Infinite Run: ON",
        jumpButton = "High Jump: OFF",
        jumpButtonOn = "High Jump: ON",
        jumpLabel = "Jump Power:",
        jumpPlaceholder = "Enter jump power (e.g., 100)",
        noclipButton = "Noclip: OFF",
        noclipButtonOn = "Noclip: ON",
        espButton = "Rainbow ESP: OFF",
        espButtonOn = "Rainbow ESP: ON",
        translateButton = "Vietnamese: OFF",
        translateButtonOn = "Vietnamese: ON",
        closeButton = "X",
        notification = "Error may occur, please bear with us 🥺"
    },
    vi = {
        title = "Kirada Hub Beta (Thử Nghiệm)",
        speedLabel = "Tốc Độ Chạy:",
        speedPlaceholder = "Nhập tốc độ (ví dụ: 50)",
        runButton = "Chạy Không Giới Hạn: TẮT",
        runButtonOn = "Chạy Không Giới Hạn: BẬT",
        jumpButton = "Nhảy Cao: TẮT",
        jumpButtonOn = "Nhảy Cao: BẬT",
        jumpLabel = "Độ Cao Nhảy:",
        jumpPlaceholder = "Nhập độ cao nhảy (ví dụ: 100)",
        noclipButton = "Xuyên Tường: TẮT",
        noclipButtonOn = "Xuyên Tường: BẬT",
        espButton = "ESP Cầu Vồng: TẮT",
        espButtonOn = "ESP Cầu Vồng: BẬT",
        translateButton = "Tiếng Việt: TẮT",
        translateButtonOn = "Tiếng Việt: BẬT",
        closeButton = "X",
        notification = "Lỗi lâu lâu xin thông cảm 🥺"
    }
}

-- One-time Notification
local function showNotification(text)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")
    screenGui.Name = "KiradaNotification"
    screenGui.ResetOnSpawn = false

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 300, 0, 60)
    frame.Position = UDim2.new(0.5, -150, 0, 20)
    frame.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = frame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.new(1, 1, 1)
    label.TextScaled = true
    label.Font = Enum.Font.GothamBold
    label.Parent = frame

    -- Animate in
    frame.Size = UDim2.new(0, 0, 0, 0)
    TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Back), {Size = UDim2.new(0, 300, 0, 60)}):Play()
    
    -- Fade out after 3s
    wait(3)
    TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
    TweenService:Create(label, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    wait(0.5)
    screenGui:Destroy()
end

-- Show notification once on load
showNotification(lang.en.notification)

-- Rainbow Color Function
local function getRainbowColor()
    local time = tick() * 0.5
    local r = math.sin(time) * 0.5 + 0.5
    local g = math.sin(time + 2) * 0.5 + 0.5
    local b = math.sin(time + 4) * 0.5 + 0.5
    return Color3.new(r, g, b)
end

-- ESP Function
local function createESP(targetPlayer)
    if targetPlayer == player or not targetPlayer.Character then return end
    local character = targetPlayer.Character
    local root = character:FindFirstChild("HumanoidRootPart")
    if not root then return end

    local highlight = Instance.new("Highlight")
    highlight.Adornee = character
    highlight.FillTransparency = 0.5
    highlight.OutlineColor = Color3.new(1, 1, 1)
    highlight.OutlineTransparency = 0
    highlight.Parent = character
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop

    local billboard = Instance.new("BillboardGui")
    billboard.Name = "ESPBillboard"
    billboard.Adornee = root
    billboard.Size = UDim2.new(0, 100, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.AlwaysOnTop = true
    billboard.Parent = character

    local distanceLabel = Instance.new("TextLabel")
    distanceLabel.Size = UDim2.new(1, 0, 1, 0)
    distanceLabel.BackgroundTransparency = 1
    distanceLabel.TextColor3 = Color3.new(1, 1, 1)
    distanceLabel.TextScaled = true
    distanceLabel.Font = Enum.Font.GothamBold
    distanceLabel.Parent = billboard

    local connection
    connection = RunService.RenderStepped:Connect(function()
        if not espEnabled or not targetPlayer.Character or not character.Parent or not root.Parent then
            highlight:Destroy()
            billboard:Destroy()
            connection:Disconnect()
            return
        end
        highlight.FillColor = getRainbowColor()
        local distance = (rootPart.Position - root.Position).Magnitude / 3 -- Studs to meters
        distanceLabel.Text = string.format("%.1f m", distance)
    end)

    table.insert(espConnections, connection)
end

local function toggleESP()
    espEnabled = not espEnabled
    for _, connection in ipairs(espConnections) do
        connection:Disconnect()
    end
    espConnections = {}
    
    if espEnabled then
        for _, targetPlayer in ipairs(Players:GetPlayers()) do
            createESP(targetPlayer)
        end
        Players.PlayerAdded:Connect(createESP)
    end
end

-- Noclip Function
local function toggleNoclip()
    noclipEnabled = not noclipEnabled
    if noclipConnection then noclipConnection:Disconnect() end
    
    if noclipEnabled then
        noclipConnection = RunService.Stepped:Connect(function()
            for _, part in pairs(character:GetDescendants()) do
                if part:IsA("BasePart") and part.CanCollide then
                    part.CanCollide = false
                end
            end
        end)
    end
end

-- Infinite Run Function
local function toggleInfiniteRun()
    infiniteRunEnabled = not infiniteRunEnabled
    if runConnection then runConnection:Disconnect() end
    
    if infiniteRunEnabled then
        runConnection = RunService.Heartbeat:Connect(function()
            if humanoid.MoveDirection.Magnitude > 0 then
                rootPart.Velocity = humanoid.MoveDirection * runSpeed
            end
        end)
    end
end

-- Jump Hack
local function toggleJump()
    jumpEnabled = not jumpEnabled
    humanoid.JumpPower = jumpEnabled and jumpPower or 50
end

-- Update UI Language
local function updateLanguage()
    local currentLang = vietnameseEnabled and lang.vi or lang.en
    title.Text = currentLang.title
    speedLabel.Text = currentLang.speedLabel
    speedInput.PlaceholderText = currentLang.speedPlaceholder
    runButton.Text = infiniteRunEnabled and currentLang.runButtonOn or currentLang.runButton
    jumpLabel.Text = currentLang.jumpLabel
    jumpInput.PlaceholderText = currentLang.jumpPlaceholder
    jumpButton.Text = jumpEnabled and currentLang.jumpButtonOn or currentLang.jumpButton
    noclipButton.Text = noclipEnabled and currentLang.noclipButtonOn or currentLang.noclipButton
    espButton.Text = espEnabled and currentLang.espButtonOn or currentLang.espButton
    translateButton.Text = vietnameseEnabled and currentLang.translateButtonOn or currentLang.translateButton
end

-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KiradaHubBeta"
screenGui.Parent = player:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 350, 0, 550) -- Increased height to accommodate new input
mainFrame.Position = UDim2.new(0.5, -175, 0.5, -275)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = mainFrame

-- Blur effect
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = Lighting

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = lang.en.title
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.Parent = mainFrame

-- Speed Input
local speedLabel = Instance.new("TextLabel")
speedLabel.Size = UDim2.new(1, 0, 0, 30)
speedLabel.Position = UDim2.new(0, 0, 0, 60)
speedLabel.BackgroundTransparency = 1
speedLabel.Text = lang.en.speedLabel
speedLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
speedLabel.TextScaled = true
speedLabel.Font = Enum.Font.Gotham
speedLabel.Parent = mainFrame

local speedInput = Instance.new("TextBox")
speedInput.Size = UDim2.new(1, -20, 0, 30)
speedInput.Position = UDim2.new(0, 10, 0, 90)
speedInput.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
speedInput.BorderSizePixel = 0
speedInput.Text = tostring(runSpeed)
speedInput.TextColor3 = Color3.fromRGB(255, 255, 255)
speedInput.PlaceholderText = lang.en.speedPlaceholder
speedInput.TextScaled = true
speedInput.Font = Enum.Font.Gotham
speedInput.Parent = mainFrame
speedInput.Visible = false -- Initially hidden

local speedCorner = Instance.new("UICorner")
speedCorner.CornerRadius = UDim.new(0, 5)
speedCorner.Parent = speedInput

speedInput.FocusLost:Connect(function()
    local num = tonumber(speedInput.Text)
    if num and num > 0 then
        runSpeed = num
    else
        speedInput.Text = tostring(runSpeed)
    end
end)

-- Jump Power Input
local jumpLabel = Instance.new("TextLabel")
jumpLabel.Size = UDim2.new(1, 0, 0, 30)
jumpLabel.Position = UDim2.new(0, 0, 0, 130)
jumpLabel.BackgroundTransparency = 1
jumpLabel.Text = lang.en.jumpLabel
jumpLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
jumpLabel.TextScaled = true
jumpLabel.Font = Enum.Font.Gotham
jumpLabel.Parent = mainFrame
jumpLabel.Visible = false -- Initially hidden

local jumpInput = Instance.new("TextBox")
jumpInput.Size = UDim2.new(1, -20, 0, 30)
jumpInput.Position = UDim2.new(0, 10, 0, 160)
jumpInput.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
jumpInput.BorderSizePixel = 0
jumpInput.Text = tostring(jumpPower)
jumpInput.TextColor3 = Color3.fromRGB(255, 255, 255)
jumpInput.PlaceholderText = lang.en.jumpPlaceholder
jumpInput.TextScaled = true
jumpInput.Font = Enum.Font.Gotham
jumpInput.Parent = mainFrame
jumpInput.Visible = false -- Initially hidden

local jumpCorner = Instance.new("UICorner")
jumpCorner.CornerRadius = UDim.new(0, 5)
jumpCorner.Parent = jumpInput

jumpInput.FocusLost:Connect(function()
    local num = tonumber(jumpInput.Text)
    if num and num > 0 then
        jumpPower = num
        if jumpEnabled then
            humanoid.JumpPower = jumpPower
        end
    else
        jumpInput.Text = tostring(jumpPower)
    end
end)

-- Run Button
local runButton = Instance.new("TextButton")
runButton.Size = UDim2.new(0.8, 0, 0, 40)
runButton.Position = UDim2.new(0.1, 0, 0, 200)
runButton.BackgroundColor3 = Color3.fromRGB(46, 125, 50)
runButton.BorderSizePixel = 0
runButton.Text = lang.en.runButton
runButton.TextColor3 = Color3.fromRGB(255, 255, 255)
runButton.TextScaled = true
runButton.Font = Enum.Font.GothamBold
runButton.Parent = mainFrame

local runCorner = Instance.new("UICorner")
runCorner.CornerRadius = UDim.new(0, 8)
runCorner.Parent = runButton

runButton.MouseButton1Click:Connect(function()
    toggleInfiniteRun()
    runButton.Text = infiniteRunEnabled and lang[vietnameseEnabled and "vi" or "en"].runButtonOn or lang[vietnameseEnabled and "vi" or "en"].runButton
    runButton.BackgroundColor3 = infiniteRunEnabled and Color3.fromRGB(76, 175, 80) or Color3.fromRGB(46, 125, 50)
    speedInput.Visible = infiniteRunEnabled
    speedLabel.Visible = infiniteRunEnabled
end)

-- Jump Button
local jumpButton = Instance.new("TextButton")
jumpButton.Size = UDim2.new(0.8, 0, 0, 40)
jumpButton.Position = UDim2.new(0.1, 0, 0, 250)
jumpButton.BackgroundColor3 = Color3.fromRGB(46, 125, 50)
jumpButton.BorderSizePixel = 0
jumpButton.Text = lang.en.jumpButton
jumpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
jumpButton.TextScaled = true
jumpButton.Font = Enum.Font.GothamBold
jumpButton.Parent = mainFrame

local jumpCorner = Instance.new("UICorner")
jumpCorner.CornerRadius = UDim.new(0, 8)
jumpCorner.Parent = jumpButton

jumpButton.MouseButton1Click:Connect(function()
    toggleJump()
    jumpButton.Text = jumpEnabled and lang[vietnameseEnabled and "vi" or "en"].jumpButtonOn or lang[vietnameseEnabled and "vi" or "en"].jumpButton
    jumpButton.BackgroundColor3 = jumpEnabled and Color3.fromRGB(76, 175, 80) or Color3.fromRGB(46, 125, 50)
    jumpInput.Visible = jumpEnabled
    jumpLabel.Visible = jumpEnabled
end)

-- Noclip Button
local noclipButton = Instance.new("TextButton")
