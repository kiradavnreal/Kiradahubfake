-- Speed Input
local speedLabel = Instance.new("TextLabel")
speedLabel.Size = UDim2.new(1, 0, 0, 30)
speedLabel.Position = UDim2.new(0, 0, 0, 60)
speedLabel.BackgroundTransparency = 1
speedLabel.Text = "T·ªëc ƒë·ªô ch·∫°y:"
speedLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
speedLabel.TextScaled = true
speedLabel.Font = Enum.Font.Gotham
speedLabel.Parent = mainFrame

local speedInput = Instance.new("TextBox")
speedInput.Size = UDim2.new(1, -20, 0, 30)
speedInput.Position = UDim2.new(0, 10, 0, 90)
speedInput.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
speedInput.BorderSizePixel = 0
speedInput.Text = "16"
speedInput.TextColor3 = Color3.fromRGB(255, 255, 255)
speedInput.PlaceholderText = "Nh·∫≠p t·ªëc ƒë·ªô (v√≠ d·ª•: 50)"
speedInput.TextScaled = true
speedInput.Font = Enum.Font.Gotham
speedInput.Parent = mainFrame

local speedCorner = Instance.new("UICorner")
speedCorner.CornerRadius = UDim.new(0, 5)
speedCorner.Parent = speedInput

speedInput.FocusLost:Connect(function()
    local num = tonumber(speedInput.Text)
    if num and num > 0 then
        runSpeed = num
    else
        speedInput.Text = tostring(runSpeed)
    end
end)

-- Run Button
local runButton = Instance.new("TextButton")
runButton.Size = UDim2.new(0.8, 0, 0, 40)
runButton.Position = UDim2.new(0.1, 0, 0, 130)
runButton.BackgroundColor3 = Color3.fromRGB(46, 125, 50)
runButton.BorderSizePixel = 0
runButton.Text = "Ch·∫°y Kh√¥ng Gi·ªõi H·∫°n: OFF"
runButton.TextColor3 = Color3.fromRGB(255, 255, 255)
runButton.TextScaled = true
runButton.Font = Enum.Font.GothamBold
runButton.Parent = mainFrame

local runCorner = Instance.new("UICorner")
runCorner.CornerRadius = UDim.new(0, 8)
runCorner.Parent = runButton

runButton.MouseButton1Click:Connect(function()
    toggleInfiniteRun()
    runButton.Text = infiniteRunEnabled and "Ch·∫°y Kh√¥ng Gi·ªõi H·∫°n: ON" or "Ch·∫°y Kh√¥ng Gi·ªõi H·∫°n: OFF"
    runButton.BackgroundColor3 = infiniteRunEnabled and Color3.fromRGB(76, 175, 80) or Color3.fromRGB(46, 125, 50)
end)

-- Jump Button
local jumpButton = Instance.new("TextButton")
jumpButton.Size = UDim2.new(0.8, 0, 0, 40)
jumpButton.Position = UDim2.new(0.1, 0, 0, 180)
jumpButton.BackgroundColor3 = Color3.fromRGB(46, 125, 50)
jumpButton.BorderSizePixel = 0
jumpButton.Text = "Nh·∫£y Cao: OFF"
jumpButton.TextColor3 = Color3.fromRGB(255, 255, 255)
jumpButton.TextScaled = true
jumpButton.Font = Enum.Font.GothamBold
